<div class="form-actions" i18n:domain="nive">
<div class="row">
  <div class="${form.widget.settings.get('column1_css', 'span2')}">
  </div>
  <div class="${form.widget.settings.get('column2_css', 'span7')}">
    <tal:block repeat="button buttons">
      <button
        tal:attributes="disabled button.disabled"
        id="${form.formid+button.name}"
        name="${button.name}"
        type="${button.type}"
        class="${button.action.get('css_class', 'btn')}"
        value="${button.value}">
        <span>${button.title}</span>
      </button>
    </tal:block>
  </div>
</div>
</div>